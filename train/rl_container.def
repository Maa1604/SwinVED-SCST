Bootstrap: docker
From: python:3.9.18-slim

%post
    apt update && apt install -y \
        bash \
        git \
        build-essential \
        default-jre \
        python3-dev \
        libffi-dev \
        libssl-dev \
        libgl1 \
        libglib2.0-0

    pip install pip==23.3.2 setuptools wheel
    pip install --no-cache-dir -r /project/requirements.txt


%files
    requirements.txt /project/

%environment
    export PATH=/project:$PATH
    export PYTHONPATH=/project
